{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["dom", "ES2015", "ESNext"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"skipDefaultLibCheck": true,
		"jsx": "react-jsx",
		"allowUnusedLabels": true,
		"declaration": true,
		"declarationDir": "dist",
		"declarationMap": true,
		"baseUrl": "./src",
		"paths": {
			"types/*": ["types/*"],
			"helpers/*": ["helpers/*"],
			"assets/*": ["assets/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"**/node_modules/*",
		"__stories__",
		"**/__stories__/*",
		"**/*.stories.tsx",
		"*.stories.ts",
		"*.stories.tsx",
		"**/*.test.ts",
		"**/*.test.tsx",
	]
}
